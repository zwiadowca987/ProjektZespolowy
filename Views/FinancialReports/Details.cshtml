@model ProjektZespolowy.Models.FinancialReport

@{
    ViewData["Title"] = "Szczegóły Raportu Finansowego";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Data Wygenerowania
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
    </dl>
</div>

<div>
    <h3>Pozycje w Raporcie</h3>
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th>Kwota</th>
                <th>Typ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FinancialReportItems)
            {
                <tr>
                    <td>@item.RaportId</td>
                    <td>@item.Name</td>
                    <td>@item.Value</td>
                    <td>@item.Flow</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a> |
    <a asp-action="Index">Powrót</a>
</div>
