@model ProjektZespolowy.Models.Costs

@{
    ViewData["Title"] = "Finanse - Koszta - Usuń";
}

<div class="container mt-4">
    <h1 class="text-center text-danger">Usuń koszt</h1>
    <h3 class="text-center mt-3">Czy na pewno chcesz usunąć ten koszt?</h3>
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Szczegóły kosztu do usunięcia</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 font-weight-bold">Nazwa</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-4 font-weight-bold">Koszt</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-success">@Html.DisplayFor(model => model.Cost)</span>
                </dd>
                <dt class="col-sm-4 font-weight-bold">Data Utworzenia</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Period)
                </dd>
            </dl>
        </div>
    </div>
    <div class="mt-4 text-center">
        <form id="deleteForm" asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">Usuń</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}