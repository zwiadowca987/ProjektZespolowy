@model IEnumerable<ProjektZespolowy.Models.Customer>

@{
    ViewData["Title"] = "Lista Klientów";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-lg"></i> Dodaj Nowego Klienta</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CustomerId)</th>
                    <th>@Html.DisplayNameFor(model => model.Imie)</th>
                    <th>@Html.DisplayNameFor(model => model.Nazwisko)</th>
                    <th>@Html.DisplayNameFor(model => model.Adres)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.CustomerId</td>
                        <td>@item.Imie</td>
                        <td>@item.Nazwisko</td>
                        <td>@item.Adres</td>
                        <td>@item.Email</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edytuj
                                </a>
                                <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Szczegóły
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Usuń
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
